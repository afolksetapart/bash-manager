# time machine backup aliases
alias backup='sudo sysctl debug.lowpri_throttle_enabled=0; trash'
alias standard='sudo sysctl debug.lowpri_throttle_enabled=1'
alias trash='trash1; trash2'
alias trash1='xcrun simctl delete unavailable; rm -rf ~/Library/Developer/CoreSimulator/Caches/dyld/*'
alias trash2='cd ~/Library/Caches/com.spotify.client; rm -rf Data; rm -rf Browser; rm -rf Cache.*; cd'


